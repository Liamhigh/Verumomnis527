{
  "hosting": {
    "public": "apps/web/dist",
    "ignore": ["**/.*", "**/node_modules/**"],
    "headers": [
      { "source": "**/*.html", "headers": [{ "key":"Cache-Control", "value":"no-store" }] },
      { "source": "**/*", "headers": [{ "key":"X-Content-Type-Options", "value":"nosniff"}] }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
